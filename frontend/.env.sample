# Janlog Frontend - Local Development Environment Variables Sample
# このファイルをコピーして .env.local を作成してください
# cp .env.sample .env.local

# 環境設定
EXPO_PUBLIC_ENV=local

# 認証設定（ローカル開発では静的JWT使用）
EXPO_PUBLIC_AUTH_MODE=mock

# バックエンドAPI設定（ローカル開発サーバー）
EXPO_PUBLIC_API_BASE_URL=http://localhost:8080

# Cognito設定（ローカル開発では使用しないが設定）
EXPO_PUBLIC_COGNITO_USER_POOL_ID=local-pool
EXPO_PUBLIC_COGNITO_CLIENT_ID=local-client
EXPO_PUBLIC_COGNITO_REGION=ap-northeast-1

# デバッグ設定
EXPO_PUBLIC_DEBUG=true

# 静的JWT設定（local環境用）
# backend/scripts/generate_mock_jwt.py で生成したJWTトークンを設定してください
EXPO_PUBLIC_MOCK_JWT=<JWT_TOKEN_HERE>