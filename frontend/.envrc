# Janlog Frontend - direnv設定
# このディレクトリに入ると自動で環境変数が読み込まれます

# .env.localファイルの読み込み
if [ -f ".env.local" ]; then
    dotenv .env.local
    echo "📝 .env.local loaded"
else
    echo "⚠️  .env.local not found. Please create it from .env.sample"
fi

# 開発用のエイリアス設定
alias start-local="npm run start:local"
alias start-dev="npm run start:dev"
alias run-tests="npm test"
alias type-check="npm run type-check"
alias lint="npm run lint"

echo "📱 Janlog Frontend environment ready!"
echo "Available commands:"
echo "  start-local     - Start Expo server (local env)"
echo "  start-dev       - Start Expo server (dev env)"
echo "  run-tests       - Run Jest tests"
echo "  type-check      - Run TypeScript type check"
echo "  lint            - Run ESLint"