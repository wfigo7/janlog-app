# Janlog Project Root - direnv設定
# プロジェクトルートでの共通設定

# .env.localファイルの読み込み
if [ -f ".envrc.local" ]; then
    dotenv .envrc.local
    echo "📝 Project .envrc.local loaded"
else
    echo "⚠️  Project .envrc.local not found"
fi

# プロジェクト情報
export PROJECT_NAME="janlog-app"
export PROJECT_ROOT="$(pwd)"

# 開発用のエイリアス設定
alias start-db="docker-compose up -d dynamodb-local"
alias stop-db="docker-compose stop dynamodb-local"
alias start-all="make start-local"
alias setup-all="make setup"

# 各ディレクトリへの移動エイリアス
alias goto-backend="cd backend"
alias goto-frontend="cd frontend"
alias goto-infra="cd infra"

echo "🏠 Janlog Project Root environment ready!"
echo "Available commands:"
echo "  start-db        - Start DynamoDB Local"
echo "  stop-db         - Stop DynamoDB Local"
echo "  start-all       - Start all services"
echo "  setup-all       - Setup all dependencies"
echo "  goto-backend    - cd backend"
echo "  goto-frontend   - cd frontend"
echo "  goto-infra      - cd infra"